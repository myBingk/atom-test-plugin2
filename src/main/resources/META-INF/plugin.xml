<idea-plugin>
    <id>io.github</id>
    <name>SpringAtomTest</name>
    <version>1.0-Stable</version>
    <vendor email="1521506029@qq.com" url="https://github.com/myBingk">bingk</vendor>

    <description>
        Quickly run JUnit test cases to minimize unit loading and execution of Spring dependencies
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.xdebugger</depends>
    <depends>com.intellij.java</depends>
    <depends>com.intellij.modules.idea.community</depends>
    <depends>JUnit</depends>

    <actions>
        <action id="RunJUnitTestAction" class="io.github.atomtestplugin2.RunJUnitTestAction" text="Fast Test">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>